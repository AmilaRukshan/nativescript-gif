<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:Gif="nativescript-gif" 
      xmlns:x="nativescript-statusbar" 
      loaded="pageLoaded">
      
      <x:StatusBar ios:barStyle="light" android:barStyle="#00695C" />
      
  <Page.actionBar>
    <ActionBar title="Gifs" backgroundColor="#009688" color="#fff" />
  </Page.actionBar>
  
  <StackLayout>
  
    <Label text="Gifs rule the world." class="message" textWrap="true"/>
    
    <!--<GridLayout rows="auto, auto" columns="auto, auto">
      <Gif:Gif src="https://media.giphy.com/media/xTiTnvMb8gkmBvwFiM/giphy.gif"  row="0" col="0" />
      <Gif:Gif src="https://media.giphy.com/media/BoPUZQRQEPogo/giphy.gif" row="0" col="1" />
      <Gif:Gif src="https://media.giphy.com/media/13Crr6gkUCCEWA/giphy.gif" row="1" col="0" />
      <Gif:Gif src="https://media2.giphy.com/media/1iAQLpW2DRW2k/200.gif" row="1" col="1" />
    </GridLayout>-->
    
    <Gif:Gif src="https://media.giphy.com/media/13Crr6gkUCCEWA/giphy.gif" id="myGif" loaded="gifLoaded" height="200" />
    <Gif:Gif src="https://media2.giphy.com/media/1iAQLpW2DRW2k/200.gif" />
    
    <Label text="{{ gifSrc }}" textWrap="true" />    
    <button text="Start" tap="startGif" />
    <button text="Stop" tap="stopGif" />
    <button text="Frame Count" tap="getFrames" />
    <Label text="{{ duration }}" textWrap="true" />
    <Label text="{{ frames }}" textWrap="true" />
    
  </StackLayout>
  

</Page>  